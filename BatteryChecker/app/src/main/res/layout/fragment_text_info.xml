<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xfsi.batterychecker.app.TextInfoFragment"
    android:background="#fffff5c6"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/textCBstuff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/textChkBx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Text Message"
                    android:textColor="#ff0e2eff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/text_100x100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneStuff"
                android:layout_below="@+id/textCBstuff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='Phone numbers(","): '
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:id="@+id/phoneNums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/phonesHint"
                    android:inputType="textPhonetic|textMultiLine" />

            </LinearLayout>

            <Button
                android:id="@+id/text_info_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/phoneStuff"
                android:text="Apply"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
